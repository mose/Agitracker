<div class="row">

<h1><%= params[:action].capitalize %> page <%= page.title %></h1>

<div class="clearfix span9">
<label for="title">Title</label>
<div class="input">
<%= text_field 'page', 'title', :id => 'title', :class => 'span8' %>
</div>
</div>

<div class="clearfix span6">
<label for="name">Name</label>
<div class="input">
<%= text_field 'page', 'name', :id => 'name', :class => 'span4' %>
</div>
</div>

</div>

<div class="clearfix span16">
<label for="content">Content</label>
<div class="input">
<%= text_area 'page', 'content', :id => 'content', :class => 'span13' %>
</div>
</div>

<div class="clearfix">
<label></label>
<div class="input">
<%= link_to "Cancel", admin_pages_path, :class => "btn"  %>
<%= button_tag "Reset", :type => "reset", :class => "btn" %>
<%= submit_tag "Save", :class => "btn primary" %>
</div>
</div>
